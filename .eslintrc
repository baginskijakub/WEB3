{
  "env": {
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "dist/*"
  ],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off"
  }
}
